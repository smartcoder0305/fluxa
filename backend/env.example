# =============================================================================
# FLUXA BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://fluxa_user:fluxa_password@localhost:5432/fluxa_dev

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Access token expiration time in minutes (default: 8 days)
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Development examples:
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
# Production example:
# BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get this from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID for your application
GOOGLE_CLIENT_ID=703528071436-urk38sfoh9nc7g6b6jrbme715b998inp.apps.googleusercontent.com

# =============================================================================
# FIRST SUPERUSER CONFIGURATION
# =============================================================================
# These credentials will be used to create the first admin user
# Change these for production environments
FIRST_SUPERUSER=admin@fluxa.com
FIRST_SUPERUSER_PASSWORD=admin123

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# Uncomment and configure these if you want email functionality
# SMTP_TLS=True
# SMTP_PORT=587
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAILS_FROM_EMAIL=noreply@yourdomain.com
# EMAILS_FROM_NAME=Fluxa System

